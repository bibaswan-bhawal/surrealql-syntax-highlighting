{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"scopeName": "source.surql",
	"name": "SurrealQL",
	"fileTypes": ["surql"],
	"patterns": [{ "include": "#surql" }],
	"repository": {
		"surql": {
			"patterns": [{ "include": "#surql-define-fragment" }]
		},
		"surql-define-fragment": {
			"name": "meta.define.surql",
			"begin": "\\b(DEFINE)\\b",
			"end": "(\\s*;)|(^(?:(?=[a-zA-Z])))",
			"beginCaptures": {
				"1": { "name": "entity.name.function.surql" }
			},
			"patterns": [
				{
					"name": "storage.type.define.surql",
					"match": "\\s*\\b(FIELD|FUNCTION|EVENT|TABLE|NAMESPACE|DATABASE|INDEX|ON|UNIQUE|COLUMNS|SCHEMAFULL|TYPE|WHEN|THEN|LOGIN|TOKEN|PASSWORD|PASSHASH|SCOPE|SESSION|SIGNUP|SIGNIN|DROP|SCHEMALESS|FROM|GROUP|BY|PREMISSIONS|NONE|FULL|FOR|ASSERT|VALUE|FIELDS|PARAM)\\b"
				}
			]
		}
	}
}
