{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"scopeName": "source.surql",
	"name": "SurrealQL",
	"fileTypes": ["surql"],
	"patterns": [{ "include": "#surql" }],
	"repository": {
		"surql": {
			"patterns": [
				{ "include": "#surql-mutation" },
				{ "include": "#surql-define-fragment" }
			]
		},
		"surql-mutation": {
			"match": "\\s*\\b(CREATE|UPDATE|DELETE)\\b",
			"captures": {
				"1": { "name": "entity.name.function.mutation.surql" }
			}
		},
		"surql-define-fragment": {
			"name": "meta.define.surql",
			"match": "\\s*\\b(?:(DEFINE)\\b\\s*\\b(FIELD|FUNCTION|EVENT|TABLE|NAMESPACE|DATABASE|INDEX))\\b",
			"captures": {
				"1": { "name": "entity.name.function.surql" },
				"2": { "name": "storage.type.define.surql" }
			}
		}
	}
}
